<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053" />

    <Button
        android:id="@+id/buttonRefresh"
        android:layout_width="202dp"
        android:layout_height="64dp"
        android:layout_marginStart="116dp"
        android:layout_marginBottom="40dp"
        android:text="@string/button_refresh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="408dp"
        android:layout_height="98dp"
        android:layout_marginTop="78dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="@string/sensor_one" />

        <TextView
            android:id="@+id/sensorTemperature1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero_value" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="110dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="177dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="@string/sensor_two" />

        <TextView
            android:id="@+id/sensorTemperature2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero_value" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="144dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="288dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="@string/sensor_three" />

        <TextView
            android:id="@+id/sensorTemperature3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero_value" />
    </LinearLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/addressInput"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_marginBottom="150dp"
        android:hint="@string/address_input_hint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>